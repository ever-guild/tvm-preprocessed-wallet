{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "outDir": "./dist",
        "lib": ["ES2020", "ESNEXT"],
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "ts-node": { "transpileOnly": true },
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
